{% schema %}
{
  "name": "Carousel",
  "settings": [],
  "presets": [
    {
      "name": "Carousel",
      "category": "ADVANCED LAYOUT"
    }
  ]
}
{% endschema %}

<div class='bg-carousel'>
  <div class='circle-container'>
    <div class='circle'></div>
  </div>
  <div class='slider-container'>
    <button class='slider-button left' id='leftButton'><img src='{{ 'arrow.png' | asset_url }}'></button>
    <div class='circular-slider'>
      <ul class='wrapper flex-center'>
        <li class='slides' style='--img-no:1;'><img src='{{ 'FRONT_CHOC.png' | asset_url }}'></li>
        <li class='slides' style='--img-no:2;'><img class='active' src='{{ 'FRONT_PAN.png' | asset_url }}'></li>
        <li class='slides' style='--img-no:3;'><img src='{{ 'Fresh Milk Bottle.png' | asset_url }}'></li>
        <li class='slides' style='--img-no:4;'><img src='{{ 'FRONT_STRAW.png' | asset_url }}'></li>
        <li class='slides' style='--img-no:5;'><img src='{{ 'Fresh Milk Bottle.png' | asset_url }}'></li>
        <li class='slides' style='--img-no:6;'><img src='{{ 'FRONT_STRAW.png' | asset_url }}'></li>
      </ul>
    </div>
    <button class='slider-button right' id='rightButton'><img src='{{ 'arrow.png' | asset_url }}'></button>
  </div>
</div>

<link rel='stylesheet' href='{{ 'carousel.css' | asset_url }}'>
<script src='{{ 'carousel.js' | asset_url }}'></script>
